<section class="orders-show"> 
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <p>User: <%= @order.email %></p>
    <p>Summary:</p>
      <div class="panel panel-default items">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th colspan="3">Product</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% @order.line_items.each do |item| %>
              <%= render 'item', name: item.product.name, image: item.product.image, description: item.product.description, unit_price: item[:item_price_cents], quantity: item[:quantity], total_price: item[:total_price_cents].to_i %>

            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="5">
                TOTAL:
              </th>
              <th>
                <%= humanized_money_with_symbol @order.total_cents / 100 %>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
